    </Window.Resources>

    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="4*"/>
        </Grid.RowDefinitions>
        
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <Button Name="buttonProfile" Grid.Column="6" Template="{StaticResource btTemplate}"/>
        </Grid>

        <TabControl Grid.Row="1" Width="Auto" Background="AliceBlue">
            <TabControl.Resources>
                <Style TargetType="TabItem">
                    <Style.Triggers>
                        <Trigger Property="IsSelected" Value="True">
                            <Setter Property="Background" Value="AliceBlue" />
                        </Trigger>
                        <Trigger Property="IsSelected" Value="False">
                            <Setter Property="Background" Value="LightBlue" />
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </TabControl.Resources>
            <TabItem Header="Schedule"
                     FontSize="16"
                     FontFamily="Kristen ITC"
                     Template="{StaticResource tcTemp}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>

                    <TextBlock Text="{Binding Source={x:Static sys:DateTime.Today}, StringFormat='{}{0:MMM dd}'}" Grid.Column="1" Grid.Row="1" Margin="5" VerticalAlignment="Center"></TextBlock>
                    <TextBlock Text="{Binding Source={x:Static sys:DateTime.Today}, StringFormat='{}{0:MMM dd}'}" Grid.Column="2" Grid.Row="1" Margin="5" VerticalAlignment="Center"></TextBlock>
                    <TextBlock Text="{Binding Source={x:Static sys:DateTime.Today}, StringFormat='{}{0:MMM dd}'}" Grid.Column="3" Grid.Row="1" Margin="5" VerticalAlignment="Center"></TextBlock>
                    <TextBlock Text="{Binding Source={x:Static sys:DateTime.Today}, StringFormat='{}{0:MMM dd}'}" Grid.Column="4" Grid.Row="1" Margin="5" VerticalAlignment="Center"></TextBlock>
                    <TextBlock Text="{Binding Source={x:Static sys:DateTime.Today}, StringFormat='{}{0:MMM dd}'}" Grid.Column="5" Grid.Row="1" Margin="5" VerticalAlignment="Center"></TextBlock>
                    <TextBlock Text="{Binding Source={x:Static sys:DateTime.Today}, StringFormat='{}{0:MMM dd}'}" Grid.Column="6" Grid.Row="1" Margin="5" VerticalAlignment="Center"></TextBlock>
                    <TextBlock Text="{Binding Source={x:Static sys:DateTime.Today}, StringFormat='{}{0:MMM dd}'}" Grid.Column="7" Grid.Row="1" Margin="5" VerticalAlignment="Center"></TextBlock>

                    <TextBlock
                        Grid.Column="0" 
                        Grid.Row="2"
                        Text="Alena"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Center"/>
                    <TextBlock
                        Grid.Column="0" 
                        Grid.Row="3"
                        Text="Galea" 
                        VerticalAlignment="Center"
                        HorizontalAlignment="Center"/>
                    <TextBlock
                        Grid.Column="0" 
                        Grid.Row="4"
                        Text="Lola" 
                        VerticalAlignment="Center"
                        HorizontalAlignment="Center"/>

                    <Grid Background="White" 
                          Name="schGrid" 
                          Grid.Column="1" 
                          Grid.ColumnSpan="7" 
                          Grid.Row="2" Grid.RowSpan="3"
                          ShowGridLines="True">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>

                    </Grid>

                </Grid>
            </TabItem>

            <TabItem Header="Communication"
                     FontSize="16"
                     FontFamily="Kristen ITC"
                     Template="{StaticResource tcTemp}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="12*"/>
                        <ColumnDefinition Width="61*"/>
                        <ColumnDefinition Width="73*"/>
