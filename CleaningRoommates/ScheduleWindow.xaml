                        <ColumnDefinition Width="73*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <Button Name="buttonSwap"  Template="{StaticResource btTemplate}" Content="Swap" Margin="5" Grid.Column="4" Grid.Row="0"></Button>


                    <ListBox Name="listBoxMessages" 
                        Grid.Column="0" 
                        Grid.ColumnSpan="5" 
                        Grid.Row="1" 
                        Margin="5">
                        <ListBox.ItemsPanel>
                            <ItemsPanelTemplate>
                                <Grid ShowGridLines="True">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="*"/>
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                </Grid>
                            </ItemsPanelTemplate>
                        </ListBox.ItemsPanel>
                        <ListBoxItem Content="From" Margin="5" Grid.Row="0" Grid.Column="0"/>
                        <ListBoxItem Content="Messages" Margin="5" Grid.Row="0" Grid.Column="1"/>
                        <ListBoxItem Content="Date" Grid.Row="0" Grid.Column="2"/>
                        <ListBoxItem Content="From Bind"  Grid.Row="1" Grid.Column="0"/>
                        <ListBoxItem Content="Messages Bind"  Grid.Row="1" Grid.Column="1"/>
                        <ListBoxItem Content="Date Bind" Grid.Row="1" Grid.Column="2"/>
                    </ListBox>


