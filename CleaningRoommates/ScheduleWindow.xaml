    </Window.Resources>

    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="4*"/>
        </Grid.RowDefinitions>

        <TabControl  Grid.Row="1" Width="Auto">
            <TabItem Header="Schedule"
                     FontSize="12"
                     FontFamily="Kristen ITC"
                     Template="{StaticResource tcTemp}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>

                    <TextBlock Text="{Binding Source={x:Static sys:DateTime.Today}, StringFormat='{}{0:MMM dd}'}" Grid.Column="1" Grid.Row="1" Margin="5" VerticalAlignment="Center"></TextBlock>
                    <TextBlock Text="{Binding Source={x:Static sys:DateTime.Today}, StringFormat='{}{0:MMM dd}'}" Grid.Column="2" Grid.Row="1" Margin="5" VerticalAlignment="Center"></TextBlock>
                    <TextBlock Text="{Binding Source={x:Static sys:DateTime.Today}, StringFormat='{}{0:MMM dd}'}" Grid.Column="3" Grid.Row="1" Margin="5" VerticalAlignment="Center"></TextBlock>
                    <TextBlock Text="{Binding Source={x:Static sys:DateTime.Today}, StringFormat='{}{0:MMM dd}'}" Grid.Column="4" Grid.Row="1" Margin="5" VerticalAlignment="Center"></TextBlock>
                    <TextBlock Text="{Binding Source={x:Static sys:DateTime.Today}, StringFormat='{}{0:MMM dd}'}" Grid.Column="5" Grid.Row="1" Margin="5" VerticalAlignment="Center"></TextBlock>
                    <TextBlock Text="{Binding Source={x:Static sys:DateTime.Today}, StringFormat='{}{0:MMM dd}'}" Grid.Column="6" Grid.Row="1" Margin="5" VerticalAlignment="Center"></TextBlock>
                    <TextBlock Text="{Binding Source={x:Static sys:DateTime.Today}, StringFormat='{}{0:MMM dd}'}" Grid.Column="7" Grid.Row="1" Margin="5" VerticalAlignment="Center"></TextBlock>

                    <TextBlock
                        Grid.Column="0" 
                        Grid.Row="2"
                        Text="Alena" />
                    <TextBlock
                        Grid.Column="0" 
                        Grid.Row="3"
                        Text="Galea" />
                    <TextBlock
                        Grid.Column="0" 
                        Grid.Row="4"
                        Text="Lola" />

                    <Grid Background="White" Name="schGrid" Grid.Column="1" Grid.ColumnSpan="7" Grid.Row="2" Grid.RowSpan="3">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>

                    </Grid>

                </Grid>
            </TabItem>

            <TabItem Header="Communication"
                     FontSize="12"
                     FontFamily="Kristen ITC"
                     Template="{StaticResource tcTemp}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="12*"/>
                        <ColumnDefinition Width="61*"/>
                        <ColumnDefinition Width="73*"/>
                        <ColumnDefinition Width="73*"/>
                        <ColumnDefinition Width="73*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <Button Name="buttonSwap"  Template="{StaticResource btTemplate}" Content="Swap" Margin="4.5,5,5,5" Grid.Column="4" Grid.Row="0"></Button>

                    <DataGrid Grid.Column="0" Grid.ColumnSpan="5" Grid.Row="1" Margin="5" AutoGenerateColumns="False">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="From" Width="1*"/>
                            <DataGridTextColumn Header="Message Type" Width="1*"/>
                            <DataGridTextColumn Header="Message Date" Width="1*"/>
                        </DataGrid.Columns>

                        <DataGrid.RowDetailsTemplate>
                            <DataTemplate>
                                <DockPanel>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="2*"/>
                                            <ColumnDefinition/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Text="{Binding Details}" Grid.Column="0" Margin="5"/>
                                        <Button Name="buttonInVisibleRow" Grid.Column="1" Margin="5" Content="Open"></Button>
                                    </Grid>
                                </DockPanel>
                            </DataTemplate>
                        </DataGrid.RowDetailsTemplate>
                    </DataGrid>
                </Grid>
            </TabItem>

            <TabItem Header="Ask WWW Questions"
                     FontSize="12"
                     FontFamily="Kristen ITC"
                     Template="{StaticResource tcTemp}">
                <Grid Margin="5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="140"/>
                        <ColumnDefinition Width="140"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <TextBox Name="textBoxQuery" Grid.Column="0" Margin="5"></TextBox>
                    <Button Grid.Column="1" Margin="5 3"  Template="{StaticResource btTemplate}">Search online</Button>
                    <Button Grid.Column="2" Margin="5 3"  Template="{StaticResource btTemplate}">Browse</Button>
                    <ListBox Name="listBoxResults" Grid.Row="1" Grid.ColumnSpan="3" Margin="5">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Vertical">
                                    <TextBlock FontSize="14" Text="{Binding Title}"/>
                                    <TextBlock FontSize="10" Text="{Binding Description}"/>
                                </StackPanel>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
