            <TabItem Header="Ask WWW Questions"
                     FontSize="16"
                     FontFamily="Kristen ITC"
                     Template="{StaticResource tcTemp}">
                <Grid Margin="5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="140"/>
                        <ColumnDefinition Width="140"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <TextBox Name="textBoxQuery" Grid.Column="0" Margin="5"></TextBox>
                    <Button Grid.Column="1" Margin="5 3"  Template="{StaticResource btTemplate}">Search online</Button>
                    <Button Grid.Column="2" Margin="5 3"  Template="{StaticResource btTemplate}">Browse</Button>
                    <ListBox Name="listBoxResults" Grid.Row="1" Grid.ColumnSpan="3" Margin="5">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Vertical">
                                    <TextBlock FontSize="14" Text="{Binding Title}"/>
                                    <TextBlock FontSize="10" Text="{Binding Description}" FontWeight="Light"/>
                                </StackPanel>
                            </DataTemplate>
